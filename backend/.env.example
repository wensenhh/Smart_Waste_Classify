# 环境配置文件示例
# 复制此文件并重命名为.env来使用

# 应用环境
NODE_ENV=development

# 服务器配置
PORT=3000
HOST=0.0.0.0
# 基础URL（用于生成完整的图片URL，如https://api.example.com）
# BASE_URL=

# 数据库配置
DB_HOST=localhost
DB_PORT=3306
DB_USER=root
DB_PASSWORD=password
DB_NAME=smart_waste_db
DB_CONNECTION_LIMIT=10
DB_IDLE_TIMEOUT=60000
DB_QUEUE_LIMIT=0

# 安全配置
JWT_SECRET=your_jwt_secret_key_here
JWT_EXPIRES_IN=86400 # 24小时（秒）
JWT_REFRESH_THRESHOLD=1800 # 30分钟（秒）
JWT_COOKIE_ENABLED=true
JWT_COOKIE_SAMESITE=lax

# CORS配置
CORS_ALLOWED_ORIGINS=http://localhost:3000,http://localhost:8080
CORS_CREDENTIALS=true

# 限流配置
RATE_LIMIT_DURATION=60000 # 1分钟（毫秒）
RATE_LIMIT_MAX=100 # 每分钟最大请求数

# 文件上传配置
FILE_UPLOAD_DIR=./uploads
MAX_FILE_SIZE=10485760 # 10MB
ALLOWED_FILE_TYPES=image/jpeg,image/png,image/gif

# 日志配置
LOG_LEVEL=info
LOG_FORMAT=json

# 国际化配置
DEFAULT_LANGUAGE=zh
SUPPORTED_LANGUAGES=zh,en

# 性能监控
PERFORMANCE_LOGGING=false
PERFORMANCE_THRESHOLD=500 # 毫秒

# 代理信任
PROXY_TRUST=false

# 邮件服务配置（可选）
EMAIL_SERVICE=smtp.example.com
EMAIL_PORT=587
EMAIL_USERNAME=your_email@example.com
EMAIL_PASSWORD=your_email_password
EMAIL_FROM=Smart Waste <no-reply@example.com>

# 第三方API配置
# 例如：图像识别API密钥等

# 调试配置
DEBUG=false